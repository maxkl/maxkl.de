<div class="project-list">
    <div for(project in input.projects) class="project">
        <div class="thumbnail-container">
            <div style="width: 50%; height: 50%; background-color: lightgray;"></div>
        </div>
        <div class="thumbnail">
            <a href="/projects/${project.name}" class="title">${project.title}</a>
            ${project.shortDesc}
            <a if(project.link) href=project.link target="_blank">Open</a>
        </div>
    </div>
</div>
